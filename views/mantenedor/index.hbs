                                    <a href="/mantenedor/{{this.idusuario}}">
                                    <p>{{this.idusuario}}</p>
                                        <button type="button" class="btn btn-dark">Delete user</button>                 
                                    </a>
                   
                                    </div>
                                </div>
                            </div>
                        </div>
                         -->
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>

</div>

<script src="/js/mantenedor/index.js"></script>

{{/plantilla}}